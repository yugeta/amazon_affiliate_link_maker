{
  "name": "Amazon affiliate link maker",
	"short_name" : "AALM",
	"version": "0.1.0.0",
	"manifest_version": 3,

  "description": "This tool makes Amazon affiliate link by Amazon associate.",

  "icons": {
		"16" : "contents/icon/link-circle_16.png",
		"48" : "contents/icon/link-circle_48.png",
		"128": "contents/icon/link-circle_128.png"
	},

  "permissions":[
		"tabs",
		"storage",
		"unlimitedStorage"
	],

	"options_ui": {
    "page": "options/index.html"
  },

  "action": {
    "default_popup": "contents/index.html"
  }
}